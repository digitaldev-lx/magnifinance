{
    "name": "digitaldev-lx/moloni-api",
    "description": "Integration package with Moloni API",
    "keywords": [
        "digitaldev-lx",
        "moloni-api"
    ],
    "homepage": "https://github.com/digitaldev-lx/moloni-api",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Paulo Serrano",
            "email": "geral@digitaldev.pt",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3"
    },
    "autoload": {
        "psr-4": {
            "DigitaldevLx\\MoloniApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DigitaldevLx\\MoloniApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "DigitaldevLx\\MoloniApi\\MoloniApiServiceProvider"
            ],
            "aliases": {
                "MoloniApi": "DigitaldevLx\\MoloniApi\\MoloniApiFacade"
            }
        }
    }
}
